<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieGridItemImage">
        <item name="android:layout_height">@dimen/movie_list_item_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MovieListItemOverView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <!--<item name="android:background">@color/colorTransparentAccent</item>-->
        <item name="android:maxLines">10</item>
        <item name="android:padding">4dp</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <!--<item name="android:background">@color/colorTransparentAccent</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FavoriteListItemName" parent="MovieListItemName">
        <!--<item name="android:background">@color/colorTransparentFavorite</item>-->
    </style>

</resources>